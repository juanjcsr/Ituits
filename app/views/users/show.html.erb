<%= provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.minituits.any? %>
		<h3>iTuits (<%= @user.minituits.count %>)</h3>
		<ol class="minituits">
			<%= render @minituits %>
		</ol>
		<%= will_paginate @minituits %>
		<% end %>
	</div>
</div>


<%= @user.email %>